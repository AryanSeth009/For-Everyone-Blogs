{
  "name": "for-everyone-blogs",
  "version": "1.0.0",
  "description": "A blogging platform for everyone",
  "scripts": {
    "install:frontend": "cd frontend && npm install",
    "install:server": "cd server && npm install",
    "install:all": "npm run install:frontend && npm run install:server",
    "build:frontend": "cd frontend && npm install --include=dev && npm run build",
    "build:server": "cd server && npm install",
    "build": "npm run build:frontend",
    "vercel-build": "npm run build:frontend",
    "start:frontend": "cd frontend && npm start",
    "start:server": "cd server && npm start",
    "dev:frontend": "cd frontend && npm run dev",
    "dev:server": "cd server && npm run dev"
  },
  "engines": {
    "node": ">=16.0.0"
  },
  "private": true,
  "devDependencies": {
    "vite": "^4.5.9",
    "@vitejs/plugin-react": "^4.0.3"
  }
}
